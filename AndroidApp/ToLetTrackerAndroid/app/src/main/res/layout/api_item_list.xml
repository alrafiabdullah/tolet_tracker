<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="ID:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="133dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="170dp"
                    android:layout_toEndOf="@+id/textID"
                    android:text="ID is here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Status: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id"
                    android:layout_marginStart="93dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textStatus"
                    android:text="Status Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Location: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status"
                    android:layout_marginStart="79dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textLocation"
                    android:text="Location Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Description: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/flatDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location"
                    android:layout_marginStart="39dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textDescription"
                    android:text="Description Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textContact"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/flatDescription"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:text="Contact Number: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flatDescription"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textContact"
                    android:text="Number Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textFlatSize"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_below="@+id/contactNumber"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:text="Flat Size (sqft): "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/flatSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactNumber"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textFlatSize"
                    android:text="Size Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textTotalRent"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_below="@+id/flatSize"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:text="Total Rent (BDT): "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/totalRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/flatSize"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textTotalRent"
                    android:text="Rent Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textPostedOn"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totalRent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Posted On: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/postedOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totalRent"
                    android:layout_marginStart="42dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/textPostedOn"
                    android:text="Time Here"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>